# Fallback .htaccess at project root
# When the subdomain or domain document root is set to this directory
# (not recommended for CodeIgniter 4), this file will forward requests
# into the public/ front controller so pretty URLs work.

<IfModule mod_rewrite.c>
    Options -Indexes -MultiViews
    RewriteEngine On
    RewriteBase /

    # Allow existing files/folders in this directory
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise route everything into public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Prefer index.php in public/ if directory indexing attempted
DirectoryIndex public/index.php
